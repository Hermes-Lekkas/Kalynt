{
    "name": "kalynt",
    "version": "1.0.0-beta",
    "private": true,
    "description": "Serverless P2P Team Collaboration Platform",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "npm run dev --workspace=apps/desktop",
        "build": "npm run build --workspace=apps/desktop",
        "build:secure": "npm run build:secure --workspace=apps/desktop",
        "electron:build:secure": "npm run electron:build:secure --workspace=apps/desktop",
        "test": "npm run test --workspaces --if-present",
        "lint": "eslint . --ext .ts,.tsx"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^8.57.1",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "author": "Hermes Lekkas",
    "license": "Proprietary"
}