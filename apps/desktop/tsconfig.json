{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2022",
        "useDefineForClassFields": true,
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@collabforge/crdt": [
                "../../packages/crdt/src"
            ],
            "@collabforge/networking": [
                "../../packages/networking/src"
            ],
            "@collabforge/crypto": [
                "../../packages/crypto/src"
            ],
            "@collabforge/shared": [
                "../../packages/shared/src"
            ]
        }
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}